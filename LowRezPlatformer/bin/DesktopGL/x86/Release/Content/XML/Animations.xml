<?xml version="1.0" encoding="utf-8"?>
<animations>
  <playerAnimations>
    <anim name="idle" looping="True">
      <frame x="0" y="0"/>
      <frame x="1" y="0"/>
      <frame x="2" y="0"/>
      <frame x="3" y="0"/>
      <frame x="4" y="0"/>
      <frame x="5" y="0"/>
    </anim>
    <anim name="idleRange" looping="True">
      <frame x="0" y="1"/>
    </anim>
    <anim name="attack" looping="False">
      <frame x="7" y="0"/>
    </anim>
    <anim name="rangeAttack" looping="False">
      <frame x="1" y="1"/>
      <frame x="2" y="1"/>
      <frame x="3" y="1"/>
      <frame x="4" y="1"/>
      <frame x="5" y="1"/>
    </anim>
  </playerAnimations>
  <enemyAnimations>
    <anim name="idle" looping="True">
      <frame x="0" y="2"/>
      <frame x="1" y="2"/>
    </anim>
    <anim name="attack" looping="False">
      <frame x="2" y="2"/>
      <frame x="3" y="2"/>
    </anim>
    <anim name="die" looping="False">
      <frame x="3" y="3"/>
      <frame x="4" y="3"/>
      <frame x="5" y="3"/>
      <frame x="6" y="3"/>
    </anim>
  </enemyAnimations>
</animations>